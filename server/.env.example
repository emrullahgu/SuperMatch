# Server Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/supermatch
MONGODB_TEST_URI=mongodb://localhost:27017/supermatch_test

# Redis (opsiyonel - caching için)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_PASSWORD=password

# AI Moderation (opsiyonel)
ENABLE_AI_MODERATION=true
MODERATION_THRESHOLD=0.7

# File Upload (avatarlar için)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email (opsiyonel - bildirimler için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Analytics (opsiyonel)
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Features Flags
ENABLE_ANONYMOUS_MODE=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_REPORTS=true
MAX_SKIP_PER_HOUR=50
